@model List<ExplorerMVC.Models.Folder>
@{
    ViewData["Title"] = "View Folder";
}

<div>
    <h1>@ViewData["parentName"]</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><a href="@ViewData["backLink"]">..</a></td>
            </tr>
        @foreach (var folder in Model)
        {
            <tr>
                <td><a href="@folder.Id">@folder.Name</a></td>
            </tr>
        }
        </tbody>
    </table>

</div>
